@using System.Web.Mvc.Html
@model IEnumerable<DivingTracker.Web.Models.TrainingModel>

@{
    ViewBag.Title = ViewBag.SiteName + ": Qualifications and Progress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>Qualifications and Progress</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p>Click on a link below to see the progress tracker for that qualification.</p>
        <ul>
        @foreach (var trainingModel in Model)
        {
            <li><a href="@Url.Action("Qualification", "Training", new {trainingModel.Qualification.QualificationId})">@trainingModel.Qualification.Name
                (@trainingModel.Qualification.AgencyName)</a></li>
        }
        </ul>
    </div>
</div>

@section Scripts
{
    <script language="javascript">
        $(document).ready(function () {
            $(".open-close").on("click",
                function () {
                    $("div.module-users#" + this.classList[1]).slideToggle();
                    $("div.module-table#" + this.classList[1]).slideToggle();
                    $("th.user-name." + this.classList[1]).fadeToggle();
                });
        });
    </script>
}