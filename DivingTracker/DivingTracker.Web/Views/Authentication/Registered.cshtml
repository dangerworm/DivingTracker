@model DivingTracker.Web.Models.RegistrationModel

@{
    Layout = "~/Views/Shared/_External.cshtml";
}

<div class="row">
    <div class="col-12">
        <h2>
            Thank you for registering for @ViewBag.SiteName!
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <p>
            We have sent you an email confirmation. Please click on the
            link in the email to complete your registration.
        </p>
    </div>
</div>