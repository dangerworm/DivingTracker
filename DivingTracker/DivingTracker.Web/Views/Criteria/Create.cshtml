                @Html.DropDownList("ModuleSectionId", null, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.ModuleSectionId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new {@class = "control-label col-md-2"})
