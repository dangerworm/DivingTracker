@model DivingTracker.ServiceLayer.Entities.AnswerDto

@if (ViewData.ModelState.Values.Any(x => x.Errors.Any()))
{
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "Answer", null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.Partial("_AnswerForm", Model)
        }
    </div>
</div>
