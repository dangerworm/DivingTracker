@model DivingTracker.ServiceLayer.Entities.QuestionDto

@if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
{
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(false, "", new {@class = "alert alert-danger"})
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "Question", null, FormMethod.Post, new {@class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.Partial("_QuestionForm")
        }
    </div>
</div>