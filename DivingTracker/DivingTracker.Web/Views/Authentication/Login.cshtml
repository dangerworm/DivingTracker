@model DivingTracker.Web.Models.LoginModel

@{
    Layout = "~/Views/Shared/_External.cshtml";
}

<div class="row">
    <div class="col-12">
        <p>
            <h3>Login</h3>
        </p>
    </div>
</div>
@using (Html.BeginForm("Login", "Authentication", null, FormMethod.Post, new {@class = "form-horizontal col-12"}))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.EmailAddress, "Email Address", new {@class = "control-label col-12"})
        <div class="col-12">
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-envelope"> </i>
                </span>
                @Html.TextBoxFor(x => x.EmailAddress, new {@class = "form-control", placeholder = "Email Address"})
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password, "Password", new {@class = "control-label col-12"})
        <div class="col-12">
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="fa fa-key"> </i>
                </span>
                @Html.TextBoxFor(x => x.Password, new {@class = "form-control", placeholder = "Password", type = "password"})
            </div>
        </div>
    </div>
    <hr/>
    <div class="pull-right">
        <button class="btn btn-primary" type="submit">Login</button>
    </div>
    <div class="pull-left">
        <p class="align-anchor-with-buttons">Not been here before? @Html.ActionLink("Register", "Register", "User", null) here.</p>
    </div>
}